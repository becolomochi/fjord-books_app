<section>
<h2>コメント</h2>

<h3>コメントを入力する</h3>

<%= form_with(model: [commentable, Comment.new], local: true) do |form| %>
  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="field">
    <%= form.label :message %>
    <%= form.text_area :message %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<h3>コメント一覧</h3>

<% if @comments.size > 0 %>
  <% @comments.each do |comment| %>
    <div>
      <%= debug comment %>
      <%= comment.content %>
      <%= comment.created_at %>
    </div>
  <% end %>
<% else %>
  <div>コメントはまだありません<div>
<% end %>

</section>
