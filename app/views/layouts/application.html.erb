<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <nav>
      <p>
        <% if user_signed_in? %>
          <%= t('views.logged_in_html', email: current_user.email ) %>
          <%= link_to t('views.edit_profile'), edit_user_registration_path %> |
          <%= link_to t('views.logout'), destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to t('views.sign_up'), new_user_registration_path %> |
          <%= link_to t('views.login'), new_user_session_path %>
        <% end %>
      </p>

      <p>
        <%= link_to User.model_name.human, users_path %>
        <%= link_to Book.model_name.human, books_path %>
      </p>
    </nav>

    <%= yield %>
  </body>
</html>
